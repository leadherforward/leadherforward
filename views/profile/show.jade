#profileModal.profile.hide.fade.modal("aria-hidden" = "true", "aria-labelledby" = "myModalLabel", 'role' = "dialog", 'tabindex' = "-1")
  .modal-body
    .row
      button.close("aria-hidden" = "true", "data-dismiss" = "modal", 'type' = "button") Ã—
      .left-column.span5
        -if (profile.photos && profile.photos[0])
          img(src=profile.photos[0], class='profile-img', alt="Image of #{profile.name}")
        -if (profile.photo_sources && profile.photo_sources[0] && profile.photo_source_names && profile.photo_source_names[0] )
          legend.photo-source
            a(href=profile.photo_sources[0])= profile.photo_source_names[0]
        .profile-social
          p
        .row
          ul.external-links
            -if (profile.take_the_lead)
             li.span
                a.lead.thumbnail(href='/take_the_lead/#{id}')
                  img.icon(src='/images/lead-small.png', alt="Take the Lead!") Take the Lead!
            - if (profile.official_website)
              li.span
                a.thumbnail(href=profile.official_website)
                  img(src='/images/externallink-icon.jpeg', alt="#{profile.name}'s Official Website")
            - if (profile.facebook)
              li.span
                a.thumbnail(href=profile.facebook)
                  img.icon(src='/images/facebook-icon.jpeg', alt="#{profile.name} Facebook Page")
            - if (profile.twitter)
              li.span
                a.thumbnail(href=profile.twitter)
                  img.icon(src='/images/twitter-icon.jpeg', alt="#{profile.name} Twitter Page")
            - if (profile.youtube)
              li.span
                a.thumbnail(href=profile.youtube)
                  img.icon(src='/images/youtube-icon.jpeg', alt="#{profile.name} YouTube Page")

           

      .right-column.span8
        h2= profile.name
        .profile-headline
          =profile.headline
        blockquote
          p.featured-quote "#{profile.quote}"
          - if (profile.quote_citation)
            small=profile.quote_citation
        p.profile-bio= profile.bio