#profileModal.profile.hide.fade.modal("aria-hidden" = "true", "aria-labelledby" = "myModalLabel", 'role' = "dialog", 'tabindex' = "-1")
  .modal-body
    .row-fluid
      button.close("aria-hidden" = "true", "data-dismiss" = "modal", 'type' = "button") Ã—
      .left-column.span5
        img(src='/photos/#{profile.action}', class='profile-img')
        .profile-social
          p
        blockquote
          p "#{profile.quote}"
        ul.external-links
          - if (profile.official_website)
            li.span
              a.thumbnail(href=profile.official_website)
                img(src='images/externallink-icon.jpeg', alt="Official Website")
          - if (profile.facebook)
            li.span
              a.thumbnail(href=profile.facebook)
                img.icon(src='images/facebook-icon.jpeg', alt="Leader's Facebook Page")
          - if (profile.twitter)
            li.span
              a.thumbnail(href=profile.twitter)
                img.icon(src='images/twitter-icon.jpeg', alt="Leader's Twitter Page")
          - if (profile.youtube)
            li.span
              a.thumbnail(href=profile.youtube)
                img.icon(src='images/youtube-icon.jpeg', alt="Leader's YouTube Page")


      .right-column.span8

        h2= profile.name

        .profile-headline
          profile.headline

