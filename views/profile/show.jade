#profileModal.profile.hide.fade.modal("aria-hidden" = "true", "aria-labelledby" = "myModalLabel", 'role' = "dialog", 'tabindex' = "-1")
  .modal-body
    .row-fluid
      button.close("aria-hidden" = "true", "data-dismiss" = "modal", 'type' = "button") Ã—
      .left-column.span5
        -if (profile.photos && profile.photos[0])
          img(src='/images/photos/#{profile.photos[0]}', class='profile-img')
        -if (profile.photoSources && profile.photoSources[0])
          legend.photo-source
            a(href=profile.photoSources[0]) Caption
        .profile-social
          p
        blockquote
          p.featured-quote "#{profile.quote}"

      .right-column.span8
        h2= profile.name
        .profile-headline
          =profile.headline
        p.profile-bio= profile.bio
        ul.external-links.span8
          - if (profile.official_website)
            li.span
              a.thumbnail(href=profile.official_website)
                img(src='/images/externallink-icon.jpeg', alt="Official Website")
          - if (profile.facebook)
            li.span
              a.thumbnail(href=profile.facebook)
                img.icon(src='/images/facebook-icon.jpeg', alt="Leader's Facebook Page")
          - if (profile.twitter)
            li.span
              a.thumbnail(href=profile.twitter)
                img.icon(src='/images/twitter-icon.jpeg', alt="Leader's Twitter Page")
          - if (profile.youtube)
            li.span
              a.thumbnail(href=profile.youtube)
                img.icon(src='/images/youtube-icon.jpeg', alt="Leader's YouTube Page")
        a.lead.thumbnail.span3(href='/take_the_lead/#{id}')
          img(src='/images/lead-small.png', alt="Further resources to take action")