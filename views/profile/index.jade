extends ../layout

block content
  h1 List of Featured Leaders
  -each profile, i in profiles
    .leader-container.row
      .leader-content
        img.leader-image.span3.thumbnail(src=profile.photos[0], alt="Image of #{profile.name}")
        .leader-text.span9
          h2.date=profile.year
          h3= profile.name
          p
          p=profile.headline
          a.profile(href='/profile/#{i}') Know more
          p