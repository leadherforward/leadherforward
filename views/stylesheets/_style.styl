#profileModal
  width: 60%
  margin-left: -30%

.left-column
  padding: 25px

.right-column
  padding: 25px 25px 25px 0
  overflow: hidden

.profile-bio
  border-top: 1px solid $ltGrey
  border-bottom: 1px solid $ltGrey
  padding: 10px 0
  margin-bottom: 20px

.profile-dates, .profile-headline
  font-style: italic
  margin-bottom: 10px

.external-links
  list-style: none
  margin-left: 0

.external-links > li
  line-height: 18px
  float: left
  width: 35px
  margin: 0 0 9px 10px

i.back
  vertical-align: baseline

blockquote p.featured-quote
  font-size: inherit
  line-height: inherit

legend.photo-source
  font-size: inherit
  line-height: inherit
  color: lightgray
  font-style: italic
  margin-bottom: 0

.leader-container
  height: 215px

.leader-text
  padding-top: 20px
  margin-left: 30px
