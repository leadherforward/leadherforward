#footer
  border-top: 0px solid $ltGrey
  padding: 20px 15px 0px 15px
  margin: 10px 0 0 0
  min-height: 150px
  height: 100%
  width: 100%
  overflow: auto
  position: relative
  left: 0
  bottom: 0

  .logo
    float: left
    margin-top: 3px
    margin-left: 40px

  nav
    float: left
    display: inline
    margin-top: 3px
    margin-left: 40px

  ul
    display: block
    list-style-type: none

  a 
    text-decoration: none
    color: $white
    &:hover
      color #FFFFFF
