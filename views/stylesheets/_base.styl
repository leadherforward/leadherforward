body #fl-design
  background-color: white
  padding: 50px 15px 25px 125px
  width: 100%
      // img.center.thumbnail
      // height: 290px
      // width: 100%

ul
  margin: 0 0 9px 17px

//Sticky Footer from http://www.cssstickyfooter.com/using-sticky-footer-code.html
html, body
  height: 100%

#wrap
  min-height: 100%

#main
  overflow: auto

footer#footer
  position: relative
  margin-top: 0px /* This should be the body bottom-padding minus the footer height */
  height: 75px
  clear: both
  font-family: "News Cycle", "Helvetica Neue", Arial, Sans Serif
  a
   font-size: 14px
  fttxt
   font-size: 14px
   color: #CD5555



